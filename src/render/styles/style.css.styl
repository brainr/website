blue = #0099ce
yellow = #ffe811
red = #ff3366
green = #3bd42e
white = #fff
black = #222

background = white

body, html
	background-color background
	min-width 360px
	font-family 'Open Sans', serif

h1, h2, h3, h4, h5, h6
	font-weight 300

.menu
	text-align center
	position fixed
	top 0
	left 0
	width 100%
	z-index 1000
	ul
		list-style none
		padding 0
		background-color background
		box-shadow 0 0 50px 40px background
		li
			display inline-block
			a
				color black
				font-weight 300
				text-transform uppercase
			&:not(:last-child) a:after
				content '\7c'
				display inline-block
				width 30px
				text-align center
				color lighten(black, 70%)
				vertical-align text-bottom

.logo
	margin-top 100px
